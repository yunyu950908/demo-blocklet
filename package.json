{
  "name": "my-blocklet",
  "version": "0.1.0",
  "description": "",
  "main": "api/index.js",
  "scripts": {
    "test": "jest --coverage=true",
    "lint": "eslint api --ext .mjs,.js,.jsx,.ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "dev": "blocklet dev",
    "start": "NODE_ENV=development nodemon api/index.js -w api",
    "clean": "rm -rf .blocklet",
    "bundle": "npm run clean && blocklet bundle --zip --create-release",
    "deploy": "npm run bundle && blocklet deploy .blocklet/bundle",
    "upload": "npm run bundle && blocklet upload .blocklet/release/blocklet.json",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{mjs,js,ts}": [
      "prettier --write",
      "eslint"
    ],
    "*.{css,less,scss,json,graphql}": [
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@arcblock/did-auth-storage-nedb": "^1.6.3",
    "@blocklet/sdk": "^1.8.13",
    "@ocap/client": "^1.17.16",
    "axios": "^0.27.2",
    "cheerio": "^1.0.0-rc.12",
    "dotenv-flow": "^3.2.0",
    "express": "^4.18.1"
  },
  "devDependencies": {
    "@arcblock/eslint-config-base": "^0.2.3",
    "eslint": "^8.23.0",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "lint-staged": "^12.5.0",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1"
  }
}
